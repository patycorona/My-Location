<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.photo.PhotoFragment">

    <TextView
        android:id="@+id/tv_title"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="?attr/text_color"
        android:fontFamily="@font/roboto_bold_italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/space_20dp"
        android:text="@string/title_photography" />
    <ImageView
        android:id="@+id/iv_Photography"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_200dp"
        android:layout_marginTop="@dimen/space_80dp"
        android:layout_marginStart="@dimen/space_24dp"
        android:layout_marginEnd="@dimen/space_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />
    <ImageButton
        android:id="@+id/btn_Photography_Event"
        android:paddingStart="@dimen/space_10dp"
        android:paddingTop="@dimen/space_5dp"
        android:paddingBottom="@dimen/space_5dp"
        android:paddingEnd="@dimen/space_10dp"
        android:elevation="@dimen/space_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20dp"
        android:src="@drawable/ic_camera1"
        android:background="@drawable/bg_splash"
        app:layout_constraintTop_toBottomOf="@id/iv_Photography"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>